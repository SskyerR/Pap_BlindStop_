int botao = A1;
int led = 2;
int led1 = 3;
int val = 0;
int counter = 0;
int contador = 0;
int estado_anterior=0;
int estado_actual=0;
void setup ()

{
pinMode(botao,INPUT);
pinMode(led,OUTPUT);
pinMode(led1,OUTPUT);
}

void loop()
{
estado_actual=digitalRead(botao);
if(estado_actual==HIGH){
acende_led();
//estado_actual=1;
}
if(estado_actual==LOW){
apaga_led();
//estado_actual=0;
}
if(estado_actual !=estado_anterior){
contador=contador+1;
}

if (contador >= 7) {
digitalWrite(led1, HIGH);
} else {
digitalWrite(led1, LOW);
}
estado_anterior=estado_actual;
}


void acende_led(){
digitalWrite(led, HIGH);
}

